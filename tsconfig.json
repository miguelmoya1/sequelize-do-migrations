{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "declaration": true,
    "sourceMap": false,
    "target": "esnext",
    "outDir": "./",
    "types":  ["node"],
    "moduleResolution": "node"
  },
  "include": ["src", "dist"],
  "exclude": ["node_modules"]
}
